<%= render 'shops/bar' %>



<div class="container show-top-container">
    <div class="row row-1">
        <div class="col-md-8 shop-show-img">
            <%= image_tag @shop.shop_image, class: "shop-title-image" if @shop.shop_image.attached? %>
            </div>
        <div class="col-md-4 shop-show-col">
            <h3><%= @shop.shopname %></h3>
            <p><%= @shop.description %></p>
        </div>
    </div> 
</div>

<div class="container">
      <div class="card" style="width: 18rem;">
        <%= image_tag @items.image, class: "show-item-img card-img-top" if @items.image.attached? %>
      <div class="card-body">
        <h5 class="card-title"><%= @items.itemname %></h5>
        <p class="card-text"><%= @items.roasting %></p>
        <p class="card-text"><%= @items.gram %>グラム</p>
        <p class="card-text"><%= @items.price %>円</p>
        <a href="#" class="btn btn-primary">詳細</a>
        <a href="#" class="btn btn-success">カートに入れる</a>
      </div>
    </div>
    
</div>